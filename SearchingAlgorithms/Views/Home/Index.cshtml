<div class="buttons">
    <button type="button" class="btn-danger" id="resetData" onclick="ResetAll()" class="btn btn-primary">Reset Data</button>

    <button type="button" id="submitDataAAlgorirm" class="btn btn-primary">A*</button>
    <button type="button" id="submitDataDijkstra" class="btn btn-primary">Dijkstra</button>
</div>

<section class="grid-container">
    <div class="grid">
        @for (int i = 0; i < Model.n; i++)
        {
            for (int j = 0; j < Model.m; j++)
            {
                <div class="grid-item" data-row="@i" data-col="@j" onclick="PaintSquare(this)"></div>
            }
        }
    </div>
</section>
